<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.huwei.sweetmusicplayer.ui.widgets.VerticalScrollView
        android:id="@+id/view_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.huwei.sweetmusicplayer.ui.views.ArtistInfoView_
                android:id="@+id/view_artist_info"
                android:layout_width="match_parent"
                android:layout_height="196dp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                app:tabIndicatorColor="@color/primary_text_white"
                app:tabTextColor="@color/secondary_text_white"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </com.huwei.sweetmusicplayer.ui.widgets.VerticalScrollView>

    <com.huwei.sweetmusicplayer.ui.widgets.GradientToolbar
        android:id="@+id/gtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />
</RelativeLayout>