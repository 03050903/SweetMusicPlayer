<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple"
        android:layout_width="match_parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/img_scan_navigation002" />

    <RelativeLayout
        style="@style/scanbottombar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scanbottombar_height" >

        <Button
            android:id="@+id/scanfinish_btn"
            style="@style/default_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:visibility="gone" 
            android:text="完成" />

        <TextView
            android:id="@+id/scancount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="24dp"
            android:text="0"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/scannow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="scannowinfo" />

    </RelativeLayout>

</LinearLayout>
